<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<template id="report_all_tasklist">
     <t t-call="web.html_container">
        <t t-call="v11_nadya_custom.custom_layout"/>
            <div class="header"></div>
            <div class="article" style="border-top: 1px solid black;">
                <div class="page">
                <h2 class="text-center"><strong>TASK LIST REPORT</strong></h2>
                <br/><br/>
                <h4 >
                        <span>Intern Directory #</span>
                        <span t-esc="datas['tasklists']"/>
                </h4>
                <div class="row mt32 mb32" id="informations">
                    <div class="col-xs-3">
                        <strong>Student:</strong>
                        <p t-esc="datas['student_id']"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Date From:</strong>
                        <p t-esc="datetime.datetime.strptime(datas['date_from'], '%Y-%m-%d').strftime('%d/%m/%Y')"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Date To:</strong>
                        <p t-esc="datetime.datetime.strptime(datas['date_to'], '%Y-%m-%d').strftime('%d/%m/%Y')"/>
                    </div>
                </div>
                    <br/>
                    <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th style="text-align:left;"><strong>Date </strong></th>
                                    <th style="text-align:left;"><strong>Project </strong></th>
                                    <th style="text-align:left;"><strong>Task </strong></th>
                                    <th style="text-align:left;"><strong>Description </strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td style="text-align:left;">
                                            <t t-esc="datetime.datetime.strptime(o['date'], '%Y-%m-%d').strftime('%d/%m/%Y')"/>
                                        </td>
                                        <td style="text-align:left;">
                                            <span t-field="o.project_id"/>
                                        </td>
                                         <td style="text-align:left;">
                                             <t t-esc="o['task']"/>
                                        </td>
                                        <td style="text-align:left;">
                                            <t t-esc="o['description']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                </div>
            <div class="footer"></div>       
        </div>
        </t>
    </template>
</odoo>