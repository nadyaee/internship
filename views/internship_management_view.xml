        sequence="1"
        groups="base.group_system,v11_internship.group_student,v11_internship.group_staff"
    />
    <menuitem 
        name="Staff" 
        id="staff_top_menu" 
        action="staff_action"
        web_icon="contacts,static/description/icon.png"
        sequence="2"
        groups="base.group_system,v11_internship.group_staff"
    />
    <menuitem 
        name="Internship Programme" 
        id="intern_top_menu" 
        web_icon="project,static/description/icon.png"
