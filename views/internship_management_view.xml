<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
       <!-- Category -->
    <record id="module_internship_management" model="ir.module.category">
        <field name="name">Internship Management</field>
        <field name="description"> Help you to handle Internship Management </field>
    </record>
    <!-- Group -->
    <record id="group_student" model="res.groups">
        <field name="name">Student</field>
        <field name="category_id" ref="module_internship_management"/>    
    </record>
        <record id="group_staff" model="res.groups">
        <field name="name">Staff</field>
        <field name="category_id" ref="module_internship_management"/>
        <field name="implied_ids" eval="[(4, ref('group_student'))]"/>
    </record>
     <!-- Create Top Menu of Internship Management  -->
    <menuitem 
        name="Student" 
        id="student_top_menu" 
        action="student_action"
        web_icon="v11_nadya_custom,static/description/student.png"
        sequence="1"
        groups="base.group_system,v11_nadya_custom.group_student,v11_nadya_custom.group_staff"
    />
    <menuitem 
        name="Staff" 
        id="staff_top_menu" 
        action="staff_action"
        web_icon="v11_nadya_custom,static/description/staff.png"
        sequence="2"
        groups="base.group_system,v11_nadya_custom.group_staff"
    />
    <menuitem 
        name="Internship Programme" 
        id="intern_top_menu" 
        web_icon="v11_nadya_custom,static/description/project.png"
        sequence="3"
        groups="base.group_system,v11_nadya_custom.group_student,v11_nadya_custom.group_staff"
    />

    <!-- Create Child Menu of Internship Programme -->
    <menuitem id="submission_top_menu"
        name="Submission"
        parent="intern_top_menu"
        sequence="1"
        groups="base.group_system,v11_nadya_custom.group_student,v11_nadya_custom.group_staff"
    />
    <menuitem 
        name="Submission" 
        id="intern_submission_top_menu" 
        action="submission_action"
        parent="submission_top_menu"
        sequence="1"
        groups="base.group_system,v11_nadya_custom.group_student,v11_nadya_custom.group_staff"
    />
    <menuitem 
        name="Company" 
        id="company_top_menu" 
        action="company_action"
        parent="submission_top_menu"
        sequence="2"
        groups="base.group_system,v11_nadya_custom.group_student,v11_nadya_custom.group_staff"
    />

    <menuitem id="intern_directory_top_menu"
        name="Intern Directory"
        parent="intern_top_menu"
        action="directory_action"
        sequence="2"
        groups="base.group_system,v11_nadya_custom.group_student,v11_nadya_custom.group_staff"
    />
    <menuitem id="report_top_menu"
        name="Report"
        parent="intern_top_menu"
        sequence="3"
        groups="base.group_system,v11_nadya_custom.group_student,v11_nadya_custom.group_staff"
    />
</odoo>
