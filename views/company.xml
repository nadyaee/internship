<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View of Company-->
    <record id="company_tree_view" model="ir.ui.view">
        <field name="name">company.tree.view</field>
        <field name="model">company.company</field>
        <field name="arch" type="xml">
            <tree string="Company Information">
                <field name="name"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="email"/>
            </tree>
        </field>
    </record>
    <record id="company_search_view" model="ir.ui.view">
        <field name="name">company.search.view</field>
        <field name="model">company.company</field>
        <field name="arch" type="xml">
            <search string="company search">
                <!-- searching-->
                <field name="name"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="email"/>
            </search> 
        </field>
    </record>


    <!-- Form View Of Company -->
    <record id="company_form_view" model="ir.ui.view">
        <field name="name">company.form.view</field>
        <field name="model">company.company</field>
        <field name="arch" type="xml">
            <form>
            <sheet>
            <div class="oe_title">
            <h1>
                <br/>
                <field name="name" string="Name" placeholder="Name" />
            </h1>
            </div>
            <group>
                <group>
                    <label for="street" string="Address"/>
                    <div class="o_address_format">
                        <field name="street" placeholder="Street..." class="o_address_street"/>
                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                        <field name="city_id" placeholder="City" class="o_address_city"/>
                        <field name="state_id" placeholder="State" class="o_address_state" domain="[('country_id','=',country_id)]"/>
                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                        <field name="country_id" placeholder="Country" class="o_address_country"/>
                    </div>
                </group>
                <group>
                    <field name="phone"  placeholder="Phone Number" />
                    <field name="mobile" placeholder="Mobile Number"/>
                    <field name="email"  placeholder="Email" />
                </group>
            </group>
            </sheet>
            </form>
        </field>
    </record>

    <!--   Define custom action of Company-->
    <record id="company_action" model="ir.actions.act_window">
        <field name="name">Company</field>
        <field name="res_model">company.company</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create new item !
            </p>
        </field>
    </record>
</odoo>